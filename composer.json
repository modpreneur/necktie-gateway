{
  "name": "modpreneur/necktie-gateway",
  "type": "project",
  "require": {
    "symfony/symfony": "^3.0",
    "sensio/framework-extra-bundle": "^3.0",
    "guzzlehttp/guzzle": "~6",
    "videlalvaro/php-amqplib": "~2",
    "sensio/distribution-bundle": "~5",
    "symfony/console": "~3",
    "symfony/validator": "^3.0",
    "doctrine/orm": "~2",
    "doctrine/doctrine-bundle": "~1"
  },

  "require-dev": {
    "symfony/var-dumper": "~3"
  },

  "authors": [
    {
      "name": "Tomáš Jančar",
      "email": "jan02@modpreneur.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php console.php cache:clear"
    ]
  },
  "minimum-stability": "stable",

  "config": {
    "bin-dir": "bin"
  },
  "extra": {
    "symfony-app-dir": "app",
    "symfony-bin-dir": "bin",
    "symfony-var-dir": "var",
    "symfony-tests-dir": "tests"
  }
}
