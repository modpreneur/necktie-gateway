{% extends '@Gateway/layout.html.twig' %}


{% block content %}
    <section>
        <h1>Overview</h1>

        <table class="table table-white">
            <tbody>
                <tr>
                    <th style="width: 20%">Git version:</th>
                    <td>{{ version }}</td>
                </tr>
                <tr>
                    <th>Server time:</th>
                    <td>{{ datetime|date('d.m.Y H:i') }}</td>
                </tr>
                <tr>
                    <th>Rabbit uri:</th>
                    <td>{{ rabbitUrl }}</td>
                </tr>
            </tbody>
        </table>
    </section>
{% endblock %}